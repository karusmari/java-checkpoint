public class Factorial {
    public static Integer factorial(Integer n) {
        if (n < 0) {
            throw new IllegalArgumentException("n must be non-negative");
        }
        int result = 1;
        for (int i = 2; i <= n; i++) {
            result *= i;
        }
        return result;
    }
}

----------------------------

public abstract class Factorial {
    public abstract long calculate(int n);
}